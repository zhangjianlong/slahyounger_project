<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.slash.youth.v2.feature.back.follow.FollowItemViewModel" />

        <import type="android.view.View" />

    </data>

    <LinearLayout
        style="@style/App.Theme.Linear.padding"
        android:orientation="horizontal"
        android:paddingBottom="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/add_v"/>

            <View
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:background="@color/app.theme.background_ddd"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/app.padding.normal">

            <TextView
                style="@style/App.Theme.TextAppearance.ww.normal.black666"
                android:text="@string/app.follow.name"/>

            <TextView
                style="@style/App.Theme.TextAppearance.ww.tiny"
                android:paddingTop="@dimen/app.padding.normal"
                android:paddingBottom="@dimen/app.padding.large"
                android:textColor="@color/app.text.black999"
                android:text="@string/app.follow.name"/>


            <include layout="@layout/include_line_h"/>
        </LinearLayout>

    </LinearLayout>
</layout>