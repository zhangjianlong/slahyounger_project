<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="chatFriendPicModel" type="com.slash.youth.ui.viewmodel.ChatFriendPicModel"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="11dp"
        >
            <ImageView
                android:id="@+id/iv_chat_other_avatar"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:scaleType="fitXY"
                android:src="@mipmap/chat_test_header"/>


        </FrameLayout>


        <ImageView
            android:id="@+id/iv_chat_friend_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/chat_box_bg"
            android:maxHeight="160dp"
            android:maxWidth="160dp"
            android:paddingLeft="4dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/chat_pic_test"
        />
        <!--android:maxHeight="116dp"-->
        <!--android:maxWidth="140dp"-->


    </LinearLayout>
</layout>
