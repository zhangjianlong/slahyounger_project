<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="itemDemandChooseServiceModel"
                  type="com.slash.youth.ui.viewmodel.ItemDemandChooseServiceModel"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal"
                >

                    <FrameLayout
                        android:layout_width="62dp"
                        android:layout_height="62dp">
                        <ImageView
                            android:id="@+id/iv_service_user_avatar"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:onClick="@{itemDemandChooseServiceModel.gotoUserInfoPager}"
                            android:src="@mipmap/assistant_icon"
                        />
                        <ImageView
                            android:id="@+id/iv_purpose_isauth_icon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="right|bottom"
                            android:src="@mipmap/small_v_icon"/>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:orientation="vertical"
                    >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                        >
                            <TextView
                                android:id="@+id/tv_purpose_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="张三疯"
                                android:textColor="#333333"
                                android:textSize="14sp"/>
                            <View
                                android:layout_width="11dp"
                                android:layout_height="11dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/shape_circle_news_count"
                                android:visibility="gone"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_company_profession_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:text="北京中意之路信息技术有限公司人事行政总监"
                            android:textColor="#666666"
                            android:textSize="12sp"/>

                        <!--<TextView-->
                        <!--android:id="@+id/tv_industry_direction"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="7dp"-->
                        <!--android:text="IT互联网｜市场商务"-->
                        <!--android:textColor="#666666"-->
                        <!--android:textSize="12sp"/>-->
                        <TextView
                            android:id="@+id/tv_bid_demand_starttime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:text="01月19日 15:45"
                            android:textColor="#666666"
                            android:textSize="12sp"/>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="报价："
                                android:textColor="#FF7333"
                                android:textSize="12sp"/>
                            <TextView
                                android:id="@+id/tv_purpose_quote"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="300元"
                                android:textColor="#999999"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_instalment_label_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="分期："
                                android:textColor="#31C5E4"
                                android:textSize="12sp"/>
                            <TextView
                                android:id="@+id/tv_purpose_instalmentratio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30%/40%/40%"
                                android:textColor="#999999"
                                android:textSize="12sp"/>
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/iv_bp_icon"
                            android:layout_width="19dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/negotiation_icon"/>

                        <TextView
                            android:id="@+id/tv_bp_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="协商处理纠纷"
                            android:textColor="#CCCCCC"
                            android:textSize="11dp"/>

                    </FrameLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="#E5E5E5"
                />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_purpose_choose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/task_demand_btn_bg"
                        android:gravity="center"
                        android:onClick="@{itemDemandChooseServiceModel.selectService}"
                        android:text="选择Ta"
                        android:textColor="#31C6E4"
                        android:textSize="13sp"
                    />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@mipmap/task_demand_btn_bg"
                        android:gravity="center"
                        android:onClick="@{itemDemandChooseServiceModel.haveAChat}"
                        android:text="聊一聊"
                        android:textColor="#2ACDA9"
                        android:textSize="13sp"
                    />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginRight="9dp"
                android:layout_marginTop="9dp"
                android:onClick="@{itemDemandChooseServiceModel.eliminateService}"
                android:src="@mipmap/close_icon_demand_choose_service"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/refused_icon"
                android:visibility="@{itemDemandChooseServiceModel.refusedIconVisibility}"
            />

        </android.support.v7.widget.CardView>

    </LinearLayout>
</layout>
