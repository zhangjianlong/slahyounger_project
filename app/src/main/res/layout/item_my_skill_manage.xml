<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="itemMySkillManageModel"
                  type="com.slash.youth.ui.viewmodel.ItemMySkillManageModel"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="15dp">
                    <ImageView
                        android:id="@+id/iv_pic"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:src="@mipmap/default_avatar"/>
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/iv_skill_manager_v"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:src="@mipmap/tab_authentication"/>

                </FrameLayout>


             <RelativeLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_skill_manager_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:maxEms="10"
                        android:textStyle="bold"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="15sp"/>

                    <LinearLayout
                        android:layout_marginTop="14dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_skill_manager_quote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="#FF7333"
                            android:textSize="13sp"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0dp"/>

                        <ImageView
                            android:id="@+id/iv_time"
                            android:visibility="gone"
                            android:layout_marginRight="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/time_icon"/>
                        <TextView
                            android:id="@+id/tv_skill_mamager_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#666666"
                            android:textSize="14sp"/>

                    </LinearLayout>

                </LinearLayout>

                 <ImageView
                     android:id="@+id/iv_delete_skill"
                     android:layout_marginTop="11dp"
                     android:layout_alignParentRight="true"
                     android:layout_width="24dp"
                     android:layout_height="24dp"
                     android:src="@mipmap/close1_icon"
                     android:layout_marginRight="12dp"
                     />

             </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#CCCCCC"
                    android:layout_gravity="center"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_fenqi"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:text="分期到账"
                    android:background="@drawable/shape_rounded_visitor_marker"
                    android:textColor="#31C5E4"
                    android:textSize="12sp"/>

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

                <TextView
                    android:id="@+id/tv_my_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/task_demand_btn_bg"
                    android:gravity="center"
                    android:text="发布"
                    android:layout_marginRight="5dp"
                    android:textColor="#31C6E4"
                    android:textSize="13sp"
                    />

            </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>
