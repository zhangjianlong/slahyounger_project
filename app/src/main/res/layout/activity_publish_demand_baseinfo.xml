<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="publishDemandbaseInfoModel"
            type="com.slash.youth.ui.viewmodel.PublishDemandBaseInfoModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rectangle_gradient_publish_demand2"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="#31C5E4"
                android:paddingTop="25dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:padding="8dp"
                        android:onClick="@{publishDemandbaseInfoModel.gotoBack}"
                        android:src="@mipmap/nav_back" />

                    <TextView
                        android:id="@+id/tv_publish_demand_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="发布需求"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                </RelativeLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/timeline_2" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/point_time" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/timeline_2" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/timeline_point" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/timeline_2" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/timeline_point" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/timeline_2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="基本信息"
                    android:textColor="#FFFFFF"
                    android:textSize="11dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="补充信息"
                    android:textColor="#FFFFFF"
                    android:textSize="11dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_publish_success_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="发布成功"
                    android:textColor="#FFFFFF"
                    android:textSize="11dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="31dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_rounded_demand2_baseinfo_inner_bg"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:layout_marginTop="14dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:onClick="@{publishDemandbaseInfoModel.openPublishWayInfo}"
                                android:text="发布方式"
                                android:textColor="#333333"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:onClick="@{publishDemandbaseInfoModel.openPublishWayInfo}"
                                android:src="@mipmap/question_icon" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:onClick="@{publishDemandbaseInfoModel.checkRealName}"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_public_demand_realname_icon"
                                    android:layout_width="17dp"
                                    android:layout_height="17dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@mipmap/pitchon_btn" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="8dp"
                                    android:text="实名发布"
                                    android:textColor="#999999"
                                    android:textSize="13sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:onClick="@{publishDemandbaseInfoModel.checkAnonymous}"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_publish_demand_anonymous_icon"
                                    android:layout_width="17dp"
                                    android:layout_height="17dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@mipmap/default_btn" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="8dp"
                                    android:text="匿名发布"
                                    android:textColor="#999999"
                                    android:textSize="13sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:layout_marginTop="15dp"
                            android:background="#E5E5E5" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:layout_marginTop="17dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="需求标题"
                                android:textColor="#333333"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/et_publish_demand_title"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:gravity="right"
                                android:hint="请输入5-20个字"
                                android:lines="1"
                                android:maxLength="20"
                                android:maxLines="1"
                                android:textColor="#333333"
                                android:textColorHint="#CCCCCC"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="121dp"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:layout_marginTop="18dp"
                            android:background="@drawable/shape_rounded_demand2_desc_bg">

                            <EditText
                                android:id="@+id/et_publish_demand_desc"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="10dp"
                                android:background="@android:color/transparent"
                                android:gravity="top|left"
                                android:hint="描述一下你的需求300字内"
                                android:maxLength="300"
                                android:textColor="#333333"
                                android:textColorHint="#CCCCCC"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_desc_text_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|bottom"
                                android:layout_marginBottom="10dp"
                                android:layout_marginRight="5dp"
                                android:text="0/300"
                                android:textColor="#cccccc"
                                android:textSize="16dp" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="开始时间"
                                android:textColor="#333333"
                                android:textSize="14sp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@android:color/transparent"
                                android:hint="不填表示随时可以开始"
                                android:onClick="@{publishDemandbaseInfoModel.setStartTime}"
                                android:text="@{publishDemandbaseInfoModel.startTimeStr}"
                                android:textColorHint="#CCCCCC"
                                android:textSize="13sp" />

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="6dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:onClick="@{publishDemandbaseInfoModel.deleteStartTime}"
                                    android:src="@mipmap/close1_icon"
                                    android:visibility="@{publishDemandbaseInfoModel.deleteStartTimeIconVisibility}" />

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:onClick="@{publishDemandbaseInfoModel.setStartTime}"
                                    android:src="@mipmap/towards_right_icon"
                                    android:visibility="@{publishDemandbaseInfoModel.setStartTimeBtnVisibility}" />
                            </FrameLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:layout_marginTop="15dp"
                            android:background="#E5E5E5" />


                        <com.slash.youth.ui.view.SlashAddPicLayout
                            android:id="@+id/sapl_publish_demand_addpic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        </com.slash.youth.ui.view.SlashAddPicLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="24dp"
                            android:text="＊建议上传清晰度高的图片上限5张"
                            android:textColor="#CCCCCC"
                            android:textSize="11sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="67dp"
                            android:background="@mipmap/demand_layer_3">

                            <Button
                                android:layout_width="252dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/btn_next_step"
                                android:onClick="@{publishDemandbaseInfoModel.nextStep}"
                                android:text="下一步"
                                android:textColor="#FFFFFF"
                                android:textSize="15sp" />

                        </FrameLayout>

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66000000"
            android:clickable="true"
            android:visibility="@{publishDemandbaseInfoModel.chooseDateTimeLayerVisibility}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#ffffff"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{publishDemandbaseInfoModel.cancelChooseTime}"
                        android:padding="12dp"
                        android:text="取消"
                        android:textColor="#999999"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:onClick="@{publishDemandbaseInfoModel.okChooseTime}"
                        android:padding="12dp"
                        android:text="确定"
                        android:textColor="#999999"
                        android:textSize="18dp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E5E5" />

                <com.slash.youth.ui.view.SlashDateTimePicker
                    android:id="@+id/sdtp_publish_demand_choose_datetime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="36dp"
                    android:paddingLeft="27dp"
                    android:paddingRight="37dp"
                    android:paddingTop="37dp">

                </com.slash.youth.ui.view.SlashDateTimePicker>
            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>

</layout>

