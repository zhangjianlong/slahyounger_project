<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="headerLocationCityInfoModel"
                  type="com.slash.youth.ui.viewmodel.HeaderLocationCityInfoModel"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="当前城市"
            android:textColor="#333333"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/tv_current_city"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_search_city"
            android:drawableLeft="@mipmap/city_dingwei_icon"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textColor="#333333"
            android:textSize="13.5sp"/>

        <TextView
            android:id="@+id/tv_title"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="我的足迹"
            android:textColor="#666666"
            android:textSize="13.5sp"/>

        <com.slash.youth.ui.view.WarpLinearLayout
            android:id="@+id/ll_city_container"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:grivate="left"
            android:layout_marginTop="16dp"
            app:horizontal_Space="10dp"
            app:isFull="false"
            app:vertical_Space="10dp" >

        </com.slash.youth.ui.view.WarpLinearLayout>

        <RelativeLayout
            android:id="@+id/rl_all_city"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_height="45dp"
            android:orientation="vertical">
           <TextView
               android:layout_centerVertical="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#333333"
               android:textSize="15dp"
               android:text="全国"/>

        </RelativeLayout>
        <View
            android:id="@+id/view"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_marginRight="50dp"
            android:layout_height="0.5dp"
            android:background="#e5e5e5"/>

    </LinearLayout>
</layout>


