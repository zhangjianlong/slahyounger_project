<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="itemSearchPersondModel"
                  type="com.slash.youth.ui.viewmodel.ItemSearchPersonModel"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
       android:background="#ffffff">
        <FrameLayout
            android:id="@+id/iv_avater"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/iv_default_avater"
                android:layout_gravity="center"
                android:layout_width="53dp"
                android:layout_height="54dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/default_avatar"
                />
            <ImageView
                android:id="@+id/iv_isAuth"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:src="@mipmap/tab_authentication"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_middle"
            android:layout_alignTop="@id/iv_avater"
            android:layout_toRightOf="@id/iv_avater"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_search_person_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/tv_search_person_position"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:textColor="#666666"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/tv_search_person_tag"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="12dp"
                android:textColor="#999999"
                android:layout_gravity="center_vertical"
                />


            <LinearLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_zhiye1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设计师"
                    android:textSize="12dp"
                    android:textColor="#999999"/>
                <View
                    android:layout_marginLeft="2dp"
                    android:layout_width="0.5dp"
                    android:layout_height="12dp"
                    android:background="#e5e5e5"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_zhiye2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="美食家"
                    android:textSize="12dp"
                    android:textColor="#999999"/>
                <View
                    android:layout_marginLeft="2dp"
                    android:layout_width="0.5dp"
                    android:layout_height="12dp"
                    android:background="#e5e5e5"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_zhiye3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品专员"
                    android:textSize="12dp"
                    android:textColor="#999999"/>
                <LinearLayout
                    android:id="@+id/ll_star"
                    android:layout_marginLeft="6dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_star"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/star"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <FrameLayout
            android:visibility="gone"
            android:layout_alignTop="@id/iv_avater"
           android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="54dp">

            <TextView
                android:id="@+id/tv_contacts_visitor_addfriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_contacts_visitor_time"
                android:layout_marginTop="8dp"
                android:background="@mipmap/button_jiahaoyou_bg"
                android:gravity="center"
                android:text="加好友"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/tv_over"
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="#666666"
                android:text="已申请"
                />
        </FrameLayout>

    </RelativeLayout>
    </RelativeLayout>
</layout>
