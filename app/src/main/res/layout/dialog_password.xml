<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="dialogPasWorsModel"
                  type="com.slash.youth.ui.viewmodel.DialogPassWorsModel"/>
    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F8F8F8">

   <ImageView
       android:onClick="@{dialogPasWorsModel.cannel}"
       android:layout_width="24dp"
       android:layout_height="24dp"
       android:layout_marginTop="10dp"
       android:layout_marginLeft="220dp"
       android:src="@mipmap/withdraw_cash_close_icon"/>

    <LinearLayout
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:text="请输入密码"
            android:textColor="#333333"
            android:textSize="15sp"
        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_height="43dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_dialog_password_rounded_rectangle"
            android:textSize="16sp">
          <!--六个点-->
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="horizontal">

          <ImageView
              android:id="@+id/password1"
              android:layout_gravity="center"
              android:visibility="invisible"
              android:layout_weight="1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/shape_approval_tv_left"/>
          <View
              android:layout_width="1dp"
              android:layout_marginTop="7dp"
              android:layout_marginBottom="7dp"
              android:layout_height="match_parent"
              android:background="#e5e5e5"/>
             <ImageView
                 android:id="@+id/password2"
                 android:layout_gravity="center"
                 android:visibility="invisible"
                 android:layout_weight="1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/shape_approval_tv_left"/>

             <View
                 android:layout_width="1dp"
                 android:layout_marginTop="7dp"
                 android:layout_marginBottom="7dp"
                 android:layout_height="match_parent"
                 android:background="#e5e5e5"/>

             <ImageView
                 android:id="@+id/password3"
                 android:visibility="invisible"
                 android:layout_gravity="center"
                 android:layout_weight="1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/shape_approval_tv_left"/>

             <View
                 android:layout_width="1dp"
                 android:layout_marginTop="7dp"
                 android:layout_marginBottom="7dp"
                 android:layout_height="match_parent"
                 android:background="#e5e5e5"/>


             <ImageView
                 android:id="@+id/password4"
                 android:layout_gravity="center"
                 android:visibility="invisible"
                 android:layout_weight="1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/shape_approval_tv_left"/>

             <View
                 android:layout_width="1dp"
                 android:layout_marginTop="7dp"
                 android:layout_marginBottom="7dp"
                 android:layout_height="match_parent"
                 android:background="#e5e5e5"/>


             <ImageView
                 android:id="@+id/password5"
                 android:layout_weight="1"
                 android:visibility="invisible"
                 android:layout_gravity="center"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/shape_approval_tv_left"/>

             <View
                 android:layout_width="1dp"
                 android:layout_marginTop="7dp"
                 android:layout_marginBottom="7dp"
                 android:layout_height="match_parent"
                 android:background="#e5e5e5"/>

             <ImageView
                 android:id="@+id/password6"
                 android:layout_weight="1"
                 android:visibility="invisible"
                 android:layout_gravity="center"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/shape_approval_tv_left"/>

         </LinearLayout>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:inputType="numberPassword"
            android:cursorVisible="false"
            android:maxLength="6"
            android:background="@android:color/transparent"
            android:textColor="@android:color/transparent"
            />

         </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            <RelativeLayout
                android:onClick="@{dialogPasWorsModel.sure}"
                android:layout_centerInParent="true"
                android:layout_width="96dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_determine_n">

                <TextView
                    android:id="@+id/ib_ok"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:text="确定"/>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    </RelativeLayout>
</layout>
