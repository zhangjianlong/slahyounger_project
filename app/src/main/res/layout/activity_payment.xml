<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="paymentModel"
            type="com.slash.youth.ui.viewmodel.PaymentModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:background="#31C5E4"
                android:paddingTop="25dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="87dp"
                    android:background="#31C5E4">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="21dp"
                            android:layout_centerVertical="true"
                            android:onClick="@{paymentModel.gotoBack}"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:src="@mipmap/nav_back"
                            android:visibility="@{paymentModel.gobackVisibility}" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@{paymentModel.paymentTopText}"
                            android:textColor="#ffffff"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:onClick="@{paymentModel.closePaymentActivity}"
                            android:text="关闭"
                            android:textColor="#ffffff"
                            android:textSize="15sp"
                            android:visibility="@{paymentModel.closeVisibility}" />

                    </RelativeLayout>

                </FrameLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="@{paymentModel.payMainInfoVisibility}">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="9dp"

                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="3dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="任务名称："
                                android:textColor="#333333"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="14dp"
                                android:ellipsize="end"
                                android:lines="1"
                                android:maxLines="1"
                                android:text="@{paymentModel.taskTitle}"
                                android:textColor="#333333"
                                android:textSize="14sp" />
                            <!--做一个互联网公司企业宣传策划案-->

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="52dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="支付金额："
                                android:textColor="#333333"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="14dp"
                                android:ellipsize="end"
                                android:lines="1"
                                android:maxLines="1"
                                android:text="@{paymentModel.payMoney}"
                                android:textColor="#FF7333"
                                android:textSize="14sp" />
                            <!--￥800-->

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="9dp"

                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="3dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="11dp"
                                android:layout_marginTop="15dp"
                                android:text="请选择支付方式"
                                android:textColor="#999999"
                                android:textSize="14sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="15dp"
                                android:background="#E5E5E5" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="12dp"
                                android:onClick="@{paymentModel.checkBalancePayment}"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="44dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@mipmap/balance_payment_icon" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="余额支付"
                                        android:textColor="#333333"
                                        android:textSize="14sp" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="9dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="现有余额"
                                            android:textColor="#CCCCCC"
                                            android:textSize="11sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@{paymentModel.currentmoney}"
                                            android:textColor="#31C5E4"
                                            android:textSize="14sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="元"
                                            android:textColor="#CCCCCC"
                                            android:textSize="11sp" />

                                    </LinearLayout>

                                </LinearLayout>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/iv_payment_balance"
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:layout_gravity="center_vertical"

                                    android:padding="5dp"
                                    android:src="@mipmap/pitchon_btn" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="12dp"
                                android:background="#E5E5E5" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="12dp"
                                android:onClick="@{paymentModel.checkAlipay}"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="44dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@mipmap/zhifubao_icon" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="支付宝支付"
                                        android:textColor="#333333"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:text="银行卡信用卡都可以使用"
                                        android:textColor="#CCCCCC"
                                        android:textSize="11sp" />

                                </LinearLayout>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/iv_payment_alipay"
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:layout_gravity="center_vertical"

                                    android:padding="5dp"
                                    android:src="@mipmap/service_ptype_moren_icon" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="12dp"
                                android:background="#E5E5E5" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="14dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="12dp"
                                android:onClick="@{paymentModel.checkWeixinPayment}"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="44dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@mipmap/weixin_payment_icon" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="微信支付"
                                        android:textColor="#333333"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:text="推荐微信5.0及以上版本用户使用"
                                        android:textColor="#CCCCCC"
                                        android:textSize="11sp" />

                                </LinearLayout>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/iv_payment_weixin"
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:layout_gravity="center_vertical"

                                    android:padding="5dp"
                                    android:src="@mipmap/service_ptype_moren_icon" />

                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="14dp"
                        android:gravity="center"
                        android:text="预支付款项将暂时托管在平台，顺利完成服务后才 打款给对方"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="67dp"
                        android:background="@mipmap/demand_layer_3">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/btn_next_step"
                            android:onClick="@{paymentModel.payment}"
                            android:text="去支付"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp" />

                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="@{paymentModel.paySuccessVisibility}">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="9dp"

                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="3dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="29dp"
                            android:layout_marginTop="29dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="67dp"
                                android:layout_height="67dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@mipmap/ok_payment_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="20dp"
                                android:text="支付成功"
                                android:textColor="#333333"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="19dp"
                                android:text="请以交易记录中最终数据为准"
                                android:textColor="#999999"
                                android:textSize="14sp" />


                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="@{paymentModel.setTradePasswordVisibility}">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="22dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="为了您"
                                android:textColor="#666666"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="账户安全"
                                android:textColor="#FF7333"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="，请前往设置斜杠平台交易密码"
                                android:textColor="#666666"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="67dp"
                            android:layout_marginTop="14dp"
                            android:background="@mipmap/demand_layer_3">

                            <Button
                                android:layout_width="250dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/btn_next_step"
                                android:onClick="@{paymentModel.gotoSettingTransactionPassword}"
                                android:text="去设置"
                                android:textColor="#FFFFFF"
                                android:textSize="15sp" />

                        </FrameLayout>
                    </LinearLayout>


                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66000000"
            android:clickable="true"
            android:visibility="@{paymentModel.payFailVisibility}">

            <LinearLayout
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/shape_payment_centerbox_bg"

                android:orientation="vertical">

                <ImageView
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="19dp"
                    android:src="@mipmap/fail_payment_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    android:text="支付失败"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="13dp"
                    android:layout_marginTop="9dp"
                    android:text="@{paymentModel.payFailReason}"
                    android:textColor="#666666"
                    android:textSize="14sp" />
                <!--网络连接失败，请重新支付-->

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3dp"
                    android:background="#ffffff">

                    <Button
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_next_step"
                        android:onClick="@{paymentModel.closeFailDialog}"
                        android:text="确定"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                </FrameLayout>

            </LinearLayout>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66000000"
            android:clickable="true"
            android:visibility="@{paymentModel.inputPasswordVisibility}">

            <FrameLayout
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ll_payment_password_keyboard"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="9dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_payment_centerbox_bg"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="24dp"
                            android:text="@{paymentModel.inputPasswordHintText}"
                            android:textColor="#333333"
                            android:textSize="15sp" />
                        <!--请输入交易密码-->

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="43dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="14dp"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/shape_payment_centerbox_bg"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="11dp"
                                android:background="@drawable/shape_paymen_password_point"
                                android:visibility="@{paymentModel.passChar1Visibility}" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="11dp"
                                android:background="#E5E5E5" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="11dp"
                                android:background="@drawable/shape_paymen_password_point"
                                android:visibility="@{paymentModel.passChar2Visibility}" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="11dp"
                                android:background="#E5E5E5" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="11dp"
                                android:background="@drawable/shape_paymen_password_point"
                                android:visibility="@{paymentModel.passChar3Visibility}" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="11dp"
                                android:background="#E5E5E5" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="11dp"
                                android:background="@drawable/shape_paymen_password_point"
                                android:visibility="@{paymentModel.passChar4Visibility}" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="11dp"
                                android:background="#E5E5E5" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="11dp"
                                android:background="@drawable/shape_paymen_password_point"
                                android:visibility="@{paymentModel.passChar5Visibility}" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="11dp"
                                android:background="#E5E5E5" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="11dp"
                                android:layout_marginRight="11dp"
                                android:background="@drawable/shape_paymen_password_point"
                                android:visibility="@{paymentModel.passChar6Visibility}" />


                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="9dp"
                        android:layout_marginTop="9dp"
                        android:onClick="@{paymentModel.closeInputPasswordBox}"
                        android:src="@mipmap/withdraw_cash_close_icon" />
                </FrameLayout>

            </FrameLayout>

            <LinearLayout
                android:id="@+id/ll_payment_password_keyboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#f6f6f6"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@mipmap/xiangxia_icon" />
                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ededed" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_add_trade_password_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="@{paymentModel.inputPassword}"
                        android:text="1"
                        android:textColor="#000000"
                        android:textSize="25sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#d2d2d2" />

                    <TextView
                        android:id="@+id/tv_add_trade_password_2"
