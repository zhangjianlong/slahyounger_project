<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="itemMyCollectionModel"
                  type="com.slash.youth.ui.viewmodel.ItemMyCollectionModel"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="15dp">
                    <ImageView
                        android:id="@+id/iv_avater"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:src="@mipmap/default_avatar"/>
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/iv_v"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:src="@mipmap/tab_authentication"/>

                </FrameLayout>


             <RelativeLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxEms="10"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="#333333"
                        android:textSize="15sp"/>

                    <LinearLayout
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="11dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_myCollection_quote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="#FF7333"
                            android:gravity="center"
                            android:textSize="13sp"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0dp"/>

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/iv_time"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/time_icon"/>

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#666666"
                            android:textSize="14sp"/>

                    </LinearLayout>
                </LinearLayout>

                 <ImageView
                     android:id="@+id/iv_delete_skill"
                     android:layout_marginTop="11dp"
                     android:layout_alignParentRight="true"
                     android:layout_width="24dp"
                     android:layout_height="24dp"
                     android:src="@mipmap/close1_icon"
                     android:layout_marginRight="12dp"
                     />

             </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="18dp"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_fenqi"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:background="@drawable/shape_rounded_visitor_marker"
                    android:layout_marginLeft="16dp"
                    android:textColor="#31C5E4"
                    android:textSize="12sp"/>

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_my_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/state1"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    android:paddingLeft="12dp"
                    android:text="失效"
                    android:textColor="#ffffff"
                    android:textSize="11dp"
                    />

            </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>
