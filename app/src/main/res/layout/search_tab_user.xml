<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_search_tab2"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        >
        <RelativeLayout
            android:id="@+id/rl_tab_sure"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_sure"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="认证"
                    android:textSize="15dp"
                    android:textColor="#333333" />

                <ImageView
                    android:id="@+id/iv_sure"
                    android:layout_marginLeft="6dp"
                    android:layout_width="10dp"
                    android:src="@mipmap/free_play"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:visibility="gone"
            android:layout_marginLeft="2dp"
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:background="#e5e5e5"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_tab_xingji"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_star"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="星级"
                    android:textSize="15dp"
                    android:textColor="#333333" />

                <ImageView
                    android:id="@+id/iv_star"
                    android:layout_marginLeft="6dp"
                    android:layout_width="10dp"
                    android:src="@mipmap/xia"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_marginLeft="2dp"
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:background="#e5e5e5"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:id="@+id/rl_tab_huoyuedu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_hot"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="影响力"
                    android:textSize="15dp"
                    android:textColor="#333333" />

                <ImageView
                    android:id="@+id/iv_hot"
                    android:layout_marginLeft="6dp"
                    android:layout_width="10dp"
                    android:src="@mipmap/xia"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d1cece"
        />

</LinearLayout>